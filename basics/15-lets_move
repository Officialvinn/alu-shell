#!/bin/bash
# This script moves all files beginning with an uppercase letter to /tmp/u

# Ensure the target directory exists
mkdir -p /tmp/u

# Enable nullglob so the pattern expands to nothing if no match
shopt -s nullglob
files=([A-Z]*)

# Check if there are any matching files
if [ ${#files[@]} -eq 0 ]; then
    echo "No files starting with an uppercase letter found."
else
    for file in "${files[@]}"; do
        mv "$file" /tmp/u/
        echo "Moved $file to /tmp/u/"
    done
fi
